.title {
  width: 100%;
  text-align: center;
}
.title button {
    border-right: none;
    border-radius: 0;
    width: 200rpx;
    border: 2rpx solid #ff976a;
}
.title .van-button--default {
    color: #ff976a;
}
.int_box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 98%;
  padding: 20rpx;
  margin: 10rpx;
  box-sizing: border-box;
  background-color: #e5e5e5;
  border-radius: 10rpx;
  font-size: 47rpx;
}
.int_box .int_left {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.int_box .int_left text:nth-child(1) {
      margin-right: 10rpx;
}
.int_box .int_left text:nth-child(2) {
      color: #222222;
}
.int_box .int_right {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    text-align: right;
    color: #999999;
}
.class_list {
  width: 100%;
  padding: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  box-sizing: border-box;
  background-color: white;
  border-radius: 10rpx;
}
.class_list .item {
    width: calc(100% / 5);
    text-align: center;
    margin-bottom: 20rpx;
}
.class_list .item text {
      display: block;
      width: 100%;
}
.note {
  width: 98%;
  box-sizing: border-box;
  padding: 15rpx;
  margin: 0 10rpx;
  border-bottom: 4rpx solid #e5e5e5;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background-color: #e5e5e5;
  border-radius: 10rpx;
}
.note .note_title {
    width: 15%;
    font-size: 40rpx;
    font-weight: 600;
    color: #424242;
}
.note .int1_box {
    width: 85%;
    box-sizing: border-box;
}
.note .int1_box input {
      width: 100%;
      border-radius: 10rpx;
      padding: 20rpx 0 20rpx 0;
      background: white;
}
.btn_box {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  text-align: center;
}
.btn_box button {
    width: 100%;
    font-size: 40rpx;
    background-color: #ff976a;
    color: white;
}
.iocn {
  font-size: 80rpx;
  color: #e5e5e5;
}
.active {
  color: #ff976a;
}

